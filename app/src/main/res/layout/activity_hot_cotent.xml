<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:paddingTop="24dp"
    tools:context=".HotCotentActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <ImageView
        android:id="@+id/a"
        android:src="@drawable/ic_chevron_left_black_24dp"
        android:layout_width="30dp"
        android:layout_height="50dp" />
        <TextView
            android:layout_toRightOf="@id/a"
            android:text="热门内容"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

</RelativeLayout>
    <ImageView
        android:background="@color/huiblack"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/b"
                android:src="@drawable/tupian11"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/c"
                android:layout_alignParentRight="true"
                android:text="点击关注"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
  <ImageView
      android:id="@+id/hot_content_imageview"
      android:layout_width="match_parent"
      android:layout_height="300dp" />
        <ImageView
            android:background="@color/huiblack"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

  <ImageView
      android:id="@+id/hot_check"
      android:layout_marginLeft="20dp"
      android:background="@drawable/ic_favorite_border_black_24dp_1"
      android:layout_width="30dp"
      android:layout_height="30dp" />
        <ImageView
            android:id="@+id/hot_pinlun"
            android:background="@drawable/ic_textsms_black_24dp"
            android:layout_toRightOf="@id/hot_check"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/fenxiang"
            android:layout_toRightOf="@id/hot_pinlun"
            android:background="@drawable/ic_near_me_black_24dp"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/hot_zhan"
            android:layout_toRightOf="@id/fenxiang"
            android:text="0赞"
            android:layout_marginLeft="150dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="30dp" />

</RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


    <TextView
        android:layout_marginTop="10dp"
        android:text="评论:"
        android:textStyle="italic"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />


            <EditText
                android:id="@+id/pinlun_edittext"
                android:layout_marginLeft="50dp"
                android:gravity="bottom"
                android:layout_width="250dp"
                android:maxLines="2"
                android:layout_height="50dp" />
            <Button
                android:layout_alignParentRight="true"
                android:text="发布"
                android:id="@+id/fabu"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/pinglun_kuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>